# Include important documentation and config files
include README.md
include README_CLI.md
include INSTALL_CLI.md
include CLI_SUMMARY.md
include CLI_IMPLEMENTATION.md
include CLI_VISUAL_GUIDE.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include requirements-cli.txt

# Include all config files
recursive-include configs *.json

# Include documentation
recursive-include docs *.md

# Include test files (for source distributions)
recursive-include tests *.py

# Include MCP server
recursive-include mcp *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so

# Exclude build artifacts
global-exclude *.egg-info
global-exclude .DS_Store
global-exclude .git*

# Exclude output directory (generated files)
prune output

# Exclude development files
exclude .gitignore
exclude .pytest_cache
exclude setup_mcp.sh
